VPATH = ../../../src/obj

# DO NOT use tabs to indent for OBJS and MYLIBS. gmake can be unhappy
# with this sometimes.
OBJS = \
  arOBJ$(OBJ_SUFFIX) \
  arOBJParsing$(OBJ_SUFFIX) \
  arOBJSmoothingGroup$(OBJ_SUFFIX) \
  arHTR$(OBJ_SUFFIX) \
  arHTRParsing$(OBJ_SUFFIX) \
  arObjectUtilities$(OBJ_SUFFIX) \
  ar3DS$(OBJ_SUFFIX)

MYLIB = libarObjects.a

MYLIBS = \
  ../drivers/libarDrivers.a \
  ../graphics/libarGraphics.a \
  ../phleet/libarPhleet.a \
  ../barrier/libarBarrier.a \
  ../language/libarLanguage.a \
  ../math/libarMath.a

$(MYLIB): $(OBJS)
	$(AR) ru $@ $^
	$(RANLIB) $@

ALL = \
	szgview$(EXE)

Everything: $(ALL)

szgview$(EXE): szgview$(OBJ_SUFFIX) $(MYLIB) $(MYLIBS)
	$(DO_LINK_GRAPHICS)


